---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Essai Gratuit",
    price: "Gratuit",
    popular: false,
    features: [
      "1 CV de base",
      "Modèles standards",
      "Export PDF simple",
      "Scoring de base",
      "Support communauté",
      "Filigrane France CV",
    ],
    button: {
      text: "Essayer gratuitement",
      link: "#",
    },
  },
  {
    name: "CV Pro",
    price: "3€",
    popular: true,
    features: [
      "CV professionnel illimité",
      "Import LinkedIn",
      "Scoring IA avancé",
      "Suggestions d'optimisation",
      "Tous les modèles premium",
      "Export PDF haute qualité",
      "Support prioritaire",
    ],
    button: {
      text: "Créer mon CV",
      link: "#",
    },
  },
  {
    name: "Pack Complet",
    price: "5€",
    popular: false,
    features: [
      "Tout du CV Pro",
      "Lettre de motivation IA",
      "Modèles de lettres premium",
      "Conseils personnalisés",
      "Export coordonné CV + LM",
      "Suivi candidatures",
      "Support téléphonique",
    ],
    button: {
      text: "Pack complet",
      link: "#",
    },
  },
];
---

<Layout title="Tarifs">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Tarifs</Fragment>
      <Fragment slot="desc">
        Des prix justes pour créer un CV qui vous démarque. Paiement unique, pas d'abonnement.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
